<%= stylesheet_link_tag "user_configs" %>

<div class="wrapper">
  <%= header_messages %>
  <%= header_title t(".title") %>

  <div class="box box-max-width">
    <div class="box-header">
      <h3 class="box-title">
        <%= t(".user_list") %>
      </h3>
    </div>
    <div class="box-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th><%= t(".number") %></th>
              <th><%= t(".name") %></th>
              <th><%= t(".admin") %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.number %></td>
                <td><%= user.name %></td>
                <td><%= user.admin? ? "○" : "×" %></td>
                <td>
                  <%= link_to t(".attendance"), attendance_user_configs_path(id: user.id),
                    class: "btn" %>
                  <%= link_to t(".delete"), user_config_path(user),
                    method: :delete,
                    class:  "btn" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
