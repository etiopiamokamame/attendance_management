<div class="form-group">
  <label class="col-sm-2 control-label">
    <%= f.object.class.human_attribute_name(:content) %>
    <%= required_marc %>
  </label>
  <div class="col-sm-10">
    <%= f.text_field :content, required: true, class: "datepicker form-control flat" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">
    <%= f.object.class.human_attribute_name(:status) %>
    <%= required_marc %>
  </label>
  <div class="col-sm-10 radio">
    <% CONSTANTS::LEAVE_TYPE_STATUSES.each do |key, val| %>
      <label>
        <%= f.radio_button :status,
          key,
          class: "form-control icheck" %>
        <label>
          <%= val %>
        </label>
      </label>
    <% end %>
  </div>
</div>
<div class="form-group">
  <%= f.label :aggregate_display, class: "col-sm-2 control-label" %>
  <div class="col-sm-10 radio">
    <%= f.check_box :aggregate_display, class: "form-control icheck" %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    $("input.icheck").iCheck({
      checkboxClass: "icheckbox_flat-blue",
      radioClass:    "iradio_flat-blue"
    });
  });
</script>
