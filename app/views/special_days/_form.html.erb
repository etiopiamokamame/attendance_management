<div class="form-group">
  <label class="col-sm-2 control-label">
    <%= f.object.class.human_attribute_name(:name) %>
    <%= required_marc %>
  </label>
  <div class="col-sm-10">
    <%= f.text_field :name, required: true, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">
    <%= f.object.class.human_attribute_name(:date_ymd) %>
    <%= required_marc %>
  </label>
  <div class="col-sm-10">
    <%= f.text_field :date_text, required: true, class: "datepicker form-control flat" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">
    <%= f.object.class.human_attribute_name(:day_type) %>
    <%= required_marc %>
  </label>
  <div class="col-sm-10 radio">
    <% CONSTANTS::SPECIAL_DAY_TYPES.each do |key, val| %>
      <label>
        <%= f.radio_button :day_type,
          key,
          class: "form-control icheck" %>
        <label>
          <%= val %>
        </label>
      </label>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    $(".datepicker").datepicker({
      language: "ja",
      format:   "<%= t("datepicker.format") %>"
    }).on("changeDate", function(e){
      $(this).datepicker("hide");
    });

    $("input.icheck").iCheck({
      checkboxClass: "icheckbox_flat-blue",
      radioClass:    "iradio_flat-blue"
    });
  });
</script>
