<%= stylesheet_link_tag    "articles" %>
<%= javascript_include_tag "articles" %>

<div class="wrapper">
  <div class="content-heder">
    <%= header_title t(".title") %>
  </div>
  <div class="box box-max-width">
    <%= form_for @article do |f| %>
      <div class="box-body form-group">
        <div class="form-group-content">
          <label><%= t(".posted_start_date") %></label>
          <%= f.text_field :posted_start_date,
            class:    "form-control",
            disabled: true %>
        </div>
        <div class="form-group-content">
          <label><%= t(".posted_end_date") %></label>
          <%= f.text_field :posted_end_date,
            class:    "form-control",
            disabled: true %>
        </div>
        <div class="form-group-content">
          <label><%= t(".title") %></label>
          <%= f.text_field :title,
            class:    "form-control",
            disabled: true %>
        </div>
        <div class="form-group-content">
          <label><%= t(".body") %></label>
          <%= f.text_area :body,
            size:      "50x10",
            maxlength: 1000,
            disabled:  true %>
        </div>
      </div>
    <% end %>
    <div class="box-footer">
      <%= button_to t(".edit_article"), edit_article_path(@article.id),
        method: :get,
        class:  "btn btn-lg pull-left" %>
      <%= button_to t(:back), "",
        class:   "btn btn-lg pull-right",
        onclick: "return article_page();" %>
    </div>
  </div>
</div>
