<%= stylesheet_link_tag "articles" %>
<%= header_messages %>
<%= header_title t(".title") %>

<div class="form-new-article">
  <table>
    <% @articles.each do |article| %>
      <tr>
        <th><%= article.updated_date %></th>
        <td><%= article.title %></td>
        <td><%= link_to "詳細", article_path(article) %></td>
      </tr>
    <% end %>
  </table>
  <div>
    <div>
      <%= button_to t(".new_article"), new_article_path,
        method: :get,
        class:  "new-article-btn" %>
    </div>
    <div>
      <%= button_to t(:back), "",
        class:   "back-btn",
        onclick: "return top_page();" %>
    </div>
  </div>
</div>
